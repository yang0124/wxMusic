<!--components/musiclist/musiclist.wxml-->
<block wx:for="{{musiclist}}" wx:key="id" >
    <view class="music-container {{item.id===musicId?'playing':''}} " bind:tap="onSelect" data-musicId="{{item.id}}">
    <view class="musiclist-index">
      {{index+1}}
    </view>
    <view class="musiclist-info">
        <view class="name">
            {{item.name}}
        </view>
        <view class="alia">
            {{item.alia.length==0?"":"item.alia[0]"}}
        </view>
        <view class="singer">
            {{item.ar[0].name}} -- {{item.al.name}}
        </view>
    </view>
    </view>
</block>

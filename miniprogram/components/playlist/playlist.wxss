/* components/playlist/playlist.wxss */
.playlist{
  width:220rpx;
  position: relative;
  margin:10rpx 0
}
.playlist .playlist_img{
  width: 100%;
  border-radius: 10rpx
}
.bofang{
  position: absolute;
  top:4rpx;
  right: 2rpx;
  font-size: 26rpx;
  color: #fff
}
.name{
  font-size: 24rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
